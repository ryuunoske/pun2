%nav.navbar.navbar-static-top{:role => "navigation"}
  / Sidebar toggle button
  %a.navbar-btn.sidebar-toggle{"data-toggle" => "offcanvas", :href => "#", :role => "button"}
    %span.sr-only Toggle navigation
    %span.icon-bar{:style => "background:white"}
    %span.icon-bar{:style => "background:white"}
    %span.icon-bar{:style => "background:white"}
  .navbar-right
    %ul.nav.navbar-nav
      / Messages: style can be found in dropdown.less
      / User Account: style can be found in dropdown.less
      %li.dropdown.user.user-menu
        %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#", :style => "color:white"}
          %i.glyphicon.glyphicon-user
          %span
            = current_user.username
            %i.caret
        %ul.dropdown-menu
          / User image
          %li.user-header.bg-light-vvs
            - #if current_user.avatar.blank?
            %p
              = current_user.email
              \- #{current_user.type}
          / Menu Footer
          %li.user-footer
            .pull-left
              - if current_user.type=='Admin'
                = link_to 'Profile', main_app.admin_profile_path(admin_id: current_user.id), :class => 'btn btn-default btn-flat'
              - elsif current_user.type=='Carrier'
                = link_to 'Profile', main_app.teacher_profile_path(teacher_id: current_user.id), :class => 'btn btn-default btn-flat'
              - else
                %a.btn.btn-default.btn-flat{:href => "#"} Profile
            .pull-right
              = link_to "Sign out", main_app.destroy_user_session_path, :method => :delete, :class => 'btn btn-default btn-flat'
:javascript
  $('.notifications-menu').hide();
  $('.messages-menu').hide();
  $('.tasks-menu').hide();
