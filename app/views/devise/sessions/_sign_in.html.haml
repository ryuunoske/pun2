%ul.nav.navbar-nav.navbar-right
	%li.dropdown
		%a.dropdown-toggle{:href => '#', 'data-toggle' => 'dropdown'}
			SignIn
		%ul.dropdown-menu{:role => 'menu', :style => "padding:17px;width: 20.5em;"}
			%li.header
				= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
					%h2 Log in
					.field
						= f.label :login
						%br/
						= f.text_field :login, placeholder: 'Username', title: 'Enter Your Username', class: 'form-control'
					.field
						= f.label :password
						%br/
						= f.password_field :password, autocomplete: "off", placeholder: 'Password', title: 'Enter Your Password', class: 'form-control'
					- if devise_mapping.rememberable?
						.field
							= f.check_box :remember_me
							= f.label :remember_me
					.actions
						= f.submit "Log in", class: 'btn btn-success btn-block'
			%li.menu
			%li.footer
				%li.box-body.text-center
					.inline
						%a.btn.btn-social-icon.btn-google-plus.actions
							%i.fa.fa-google-plus
						%a.btn.btn-social-icon.btn-facebook.actions
							%i.fa.fa-facebook
				%br/
				%li
					.inline
						= render "devise/shared/links"